<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.nagirescue.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@android:color/holo_green_dark"
        android:id="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:id="@+id/logoImageView"
            android:src="@drawable/logo"
            android:layout_alignParentStart="true"
            android:layout_gravity="top"
            android:layout_weight="0.13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="NAGI HOME"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="20dp"
            android:typeface="serif" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Who are we?"
            android:id="@+id/textView2"
            android:layout_marginTop="50dp"
            android:typeface="monospace" />

        <TextView
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/contentTextView"
            android:text="The Nagi Foundation is a 501(c)3 organization dedicated to serving the First Nations community members and their animals. By sharing resources, information and support we can provide opportunities for animal owners to keep and protect their animals"
            android:layout_gravity="center|bottom|left|right|top"
            android:layout_weight="0.16"
            android:typeface="monospace"
            android:textAlignment="inherit" />
    </LinearLayout>

</RelativeLayout>
